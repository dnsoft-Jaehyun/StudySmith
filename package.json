{
  "name": "edu-dialogue-ts",
  "version": "1.0.0",
  "description": "국사과 대화셋 자동생성 시스템",
  "main": "index.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:web": "node dist/server.js",
    "dev": "concurrently --names \"FRONTEND,BACKEND\" --kill-others-on-fail \"webpack-dev-server --mode development\" \"cross-env PORT=8080 ts-node-dev -r dotenv/config --respawn src/server.ts\"",
    "dev:backend": "cross-env PORT=8080 ts-node-dev -r dotenv/config --respawn src/server.ts",
    "dev:frontend": "webpack-dev-server --mode development",
    "build": "tsc --project tsconfig.json && webpack --mode production",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "clean": "rimraf dist",
    "chroma:clean": "docker-compose down --volumes && rimraf ./chroma.log",
    "chroma:local": "docker-compose up -d --wait",
    "start:docker": "npm run chroma:local && cross-env CHROMA_USE_LOCAL_MODE=true npm run start:web"
  },
  "keywords": [
    "education",
    "ai",
    "llm",
    "dialogue"
  ],
  "author": "",
  "license": "MIT",
